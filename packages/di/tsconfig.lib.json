{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "src",
    "outDir": "dist",
    "tsBuildInfoFile": "dist/tsconfig.lib.tsbuildinfo",
    "emitDeclarationOnly": true,
    "allowImportingTsExtensions": true,
    "types": ["node"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2022", // or whatever modern target you prefer
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    // We're building a lib, so we definitely want these
    "declaration": true,
    "declarationMap": true
  },
  "include": ["src/**/*.ts"],
  "references": [],
  "exclude": ["jest.config.ts", "src/**/*.spec.ts", "src/**/*.test.ts"]
}
